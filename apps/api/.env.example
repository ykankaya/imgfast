# Server
PORT=3001
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/imagecdn?schema=public

# CORS
CORS_ORIGINS=http://localhost:3000

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# Internal API (for edge worker communication)
API_SECRET_KEY=your-internal-api-secret

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Cloudflare R2
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=imagecdn-images

# CDN
CDN_BASE_URL=https://cdn.example.com

# Dashboard URL (for redirects)
DASHBOARD_URL=http://localhost:3000

# URL Signing
URL_SIGNING_SECRET=your-url-signing-secret
